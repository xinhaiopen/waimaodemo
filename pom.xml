                <scope>provided</scope>
            </dependency>
            <!--end log4j libs -->

            <!-- MyBatis libs -->
            <dependency>
                <groupId>org.mybatis</groupId>
                <artifactId>mybatis</artifactId>
                <version>3.3.1</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>org.mybatis</groupId>
                <artifactId>mybatis-spring</artifactId>
                <version>1.2.3</version>
                <scope>provided</scope>
            </dependency>
